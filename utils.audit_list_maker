##########################################################################################################
##########################################################################################################

# WRITE SOURCE MEDIA FILENAMES TO THE STORAGE LOCATION
# the designated storage directory must already exist - it won't be created by this script.

# TODO: if wc -l output_file >= 12000; then continue writing to output_file2

# 
#date=$(date +'%T')
#date=$(date +'%F')
#date=$(date +'%F@%T')

# return a match for dir paths in the ignore array, set a result and return immediately
function test_for_ignore_dir
{
	test_dir_path="$1"

	for ignore_dir in "${directories_to_ignore[@]}"
	do
		echo
		echo "INSIDE THE TEST FUNCTION:"
		echo "test_dir_path : $test_dir_path"
		echo "ignore_dir : $ignore_dir"

		if [[ "$test_dir_path" == "${source_directory}/$ignore_dir" ]]
		then
			echo "TEST FOUND A MATCH TO IGNORE!!!!!!!!!!!!!!!!!############0000000000 $test_dir_path "
			result=0 # found, so break out of for loop
			return "$result" # found, so break out of for loop
		else 
			result=1
		fi
	done

	return "$result" # returns 1 for failing to find a match

}

echo
echo "@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@"
echo "STARTING THE 'WRITE SOURCE MEDIA FILENAMES TO THE STORAGE LOCATION' PHASE"
echo "@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@"
echo

# remove previous output files during development
rm "${audit_list_storage_directory}"/*

for input_dir_path in "${source_directory}"/*
do
	# TODO: really? ignore files in the source_directory? really? yes for now.
	if ! [[ -d "$input_dir_path" ]]
	then
		echo "NOT A DIRECTORY ::::::::::::     "$input_dir_path""
		continue
	fi

	# find out if the current dir path is configured to be ignored, so we can skip to the next
	test_for_ignore_dir "$input_dir_path" 
	return_code=$?; echo "return_code : $return_code"
	if [[ "$return_code" -eq 0 ]]
	then
		echo "IGNORING ::::::::::::     "$input_dir_path""
		continue
	fi

	# so now assuming we're OK TO GO to audit input_dir_path... # also, try [[:alphanum:]] or [A-Za-z0-9_-]
	storage_filename="${input_dir_path##*'/'}.$(date +'%F@%T')" # use the input directory name to name the output file

	output_file="${audit_list_storage_directory}/${storage_filename}"

	echo "output_file set to : $output_file" # debug

	printf "filename: %s\t" $output_file >> "$output_file"
	printf "%s\n" "::  $(date +"	[%Y-%m-%d] [%H:%M:%S]")" >> "$output_file"
	printf "%s\n" "@@@@@@@audit@@@@@@@@@@@@@@@@@@@ :: $output_file :: @@@@@@@@@@@output@@@@@@@@@@@@@@@" >> "$output_file"
	printf "%s\n" "   @@@@@@@  ::  $(date +"	[%Y-%m-%d] [%H:%M:%S]") ::     @@@@@@@    " >> "$output_file"

	# output file created for appended redirect, any problem tell the hand
	# TODO: better to use find and specify a list of file extensions of interest - investigate later
	ls -R "$input_dir_path" >> "$output_file"  2>/dev/null


	## TODO: WE JUST WANT THE COUNT HERE, SO REDIRECT OR PIPE TO sed || USE VARIABLE EXPANSION ON A VARIABLE
	echo "LINE COUNT OUTPUT FOR FILE: `wc -l "$output_file"` "


done	






##########################################################################################################
##########################################################################################################

echo "exit code: $?" && exit 



